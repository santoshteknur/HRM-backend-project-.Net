@model IEnumerable<ERP.Models.Employee>

@{
    ViewBag.Title = "Index_New";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        background-color: #faebd7;
        background-size: cover;
    }
</style>
@using (Html.BeginForm())
{
    <h1 style="text-align: center;"><u>List of All Employee</u></h1>
    <br />
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <p>
                <h4>
                    @Html.ActionLink("Create New", "Create")
                </h4>

            </p>
            <table class="table table-bordered table-hover table table-responsive" border="1" style="overflow-x:scroll">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Joining_Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nationality)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Mobile)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Designation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gross_Salary)
                    </th>
                    <th>Options</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <th>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </th>

                        <td>
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <th>
                            @Html.DisplayFor(modelItem => item.Joining_Date)
                        </th>

                        <td>
                            @Html.DisplayFor(modelItem => item.Nationality)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <th>
                            @Html.DisplayFor(modelItem => item.Department)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.Designation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gross_Salary)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.EmpID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.EmpID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.EmpID })
                        </td>
                    </tr>
                }

            </table>

        </div>
        <div class="col-sm-1"></div>
    </div>
}
