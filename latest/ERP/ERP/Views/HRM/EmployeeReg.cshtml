@using (Html.BeginForm())
{<h1 style="text-align: center;color:white"><u>Employee Record</u></h1>
    <br />
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8" style="background:white">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-body">
                    <br />
                    <legend>User Details</legend>
                    <div class="row" style="">
                        <div class="col-sm-2">
                            <label> Employee ID:</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="text" placeholder="Employee ID" class="form-control">
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-sm-2">
                            <label> Designation:</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="text" placeholder="Designation" class="form-control">
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-sm-2">
                            <label> Username:</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="text" placeholder="Username" class="form-control">
                        </div>
                    </div><br />

                    <div class="row">
                        <div class="col-sm-2">
                            <label> Password:</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="password" placeholder="Password" class="form-control">
                        </div>
                    </div><br />


                    <div class="row">
                        <div class="col-sm-2">
                            <label> Re-enter Password:</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="password" placeholder="Re-enter Password" class="form-control">
                        </div>

                    </div><br />

                    <legend>Personal Details</legend>
                    <div class="row" style="">
                        <div class="col-sm-2">
                            <label> Name:</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="text" placeholder="Name" class="form-control">
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-sm-2">
                            <label> Gender:</label>
                        </div>
                        <div class="col-sm-4">
                            <select type="text" placeholder="Gender" class="form-control">
                                <option value="female">Female</option>
                                <option value="male">Male</option>
                            </select>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-sm-2">
                            <label> Date Of Birth:</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="date" placeholder="Date Of Birth" class="form-control">
                        </div>
                    </div><br />

                    <div class="row">
                        <div class="col-sm-2">
                            <label>Address:</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="text" placeholder="Address" class="form-control">
                        </div>
                    </div><br />


                    <div class="row">
                        <div class="col-sm-2">
                            <label>Mobile Number:</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="text" placeholder="Mobile Number" class="form-control" maxlength="10">
                        </div>

                    </div><br />
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Email:</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="email" name="eEmail" placeholder="Email" class="form-control">
                        </div>
                    </div><br />

                    <legend>Bank Details</legend>
                    <!-- Text input-->
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Bank Name:</label>
                        </div>

                        <div class="col-sm-4">
                            <input type="text" placeholder="Bank Name" class="form-control">
                        </div>

                    </div><br />
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Account Number:</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="number" placeholder="Account Number" class="form-control" maxlength="15">
                        </div>

                    </div><br />
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-default">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div><br />
                </div>
                <div class="col-sm-2"></div>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>


    


}